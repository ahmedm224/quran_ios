<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#000000" />
            <size
                android:width="180dp"
                android:height="180dp" />
        </shape>
    </item>
    <!-- Green progress ring -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="oval">
            <stroke
                android:width="6dp"
                android:color="#4CAF50" />
            <solid android:color="#000000" />
        </shape>
    </item>
    <!-- Prayer notification icon in center -->
    <item
        android:drawable="@drawable/ic_prayer_notification"
        android:gravity="center"
        android:width="40dp"
        android:height="40dp" />
</layer-list>
